		НЗапись = НаборЗаписей[0];

		Если ЭтаФорма.Количество = 0 Тогда
			НаборЗаписей.Удалить(НЗапись);  
		Иначе
			НЗапись.Количество = ЭтаФорма.Количество; 
		КонецЕсли;
		
	КонецЕсли;  
	
	НаборЗаписей.Записать();
	
