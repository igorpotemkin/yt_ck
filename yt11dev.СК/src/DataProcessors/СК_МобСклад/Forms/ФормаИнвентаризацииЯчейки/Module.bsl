	НаборЗаписей.Отбор.Ячейка.Установить(ЭтотОбъект.Ячейка);
	НаборЗаписей.Отбор.Пользователь.Установить(ТекПользователь);
	НаборЗаписей.Отбор.ДокументПересчета.Установить(ДокументПересчета);

	НаборЗаписей.Прочитать();
